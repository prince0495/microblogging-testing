generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stream {
  id                  String            @id @unique @default(uuid())
  description         String
  status              StreamStatus      @default(SCHEDULED)
  price               Decimal           @db.Decimal(10,2)
  currency            StreamCurrency    @default(USD)
  scheduledAt         DateTime
  startedAt           DateTime?
  endedAt             DateTime?

  statusId            String?           @unique
  
  authorId            String

  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt
  @@index([authorId])
}

enum StreamStatus {
  SCHEDULED
  LIVE
  ENDED
  CANCELLED
}

enum StreamCurrency {
  USD
  EUR
  GBP
  INR
}